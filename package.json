{
  "name": "unbarrelify",
  "version": "1.0.0",
  "type": "module",
  "description": "Barrel file removal tool for JavaScript & TypeScript projects (ESM-only)",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "bin": {
    "unbarrelify": "./dist/cli.js"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsc",
    "test": "node --test test/**/*.test.ts",
    "prepack": "tsc"
  },
  "dependencies": {
    "oxc-resolver": "^11.16.3",
    "tinyglobby": "^0.2.15",
    "typescript": "^5.9.3"
  },
  "devDependencies": {
    "@types/node": "^24.10.9"
  },
  "engines": {
    "node": ">=20.12.0"
  },
  "keywords": [
    "barrel",
    "codemod",
    "ESM",
    "exports",
    "files",
    "imports",
    "index",
    "refactor",
    "rewrite",
    "typescript"
  ],
  "license": "ISC",
  "packageManager": "pnpm@10.28.1"
}
